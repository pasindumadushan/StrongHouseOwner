    function getData()
    {

        var EditHouseForm = new FormData();

        var file = $('#file').get(0).files;

        EditHouseForm.append("UserId", @ViewBag.ViewBaguserId);
        EditHouseForm.append("HouseId", @Model.HouseId);
        EditHouseForm.append("House_Name", $("#House_Name").val());
        EditHouseForm.append("House_Address", $("#House_Address").val());
        EditHouseForm.append("Additional_Information", $("#Additional_Information").val());
        EditHouseForm.append("Number_Of_Floors", $("#Number_Of_Floors").val());
        EditHouseForm.append("Floor_Area", $("#Floor_Area").val());
        EditHouseForm.append("Land_Area", $("#Land_Area").val());
        EditHouseForm.append("Number_Of_LivingRooms", $("#Number_Of_LivingRooms").val());
        EditHouseForm.append("Number_Of_DiningRooms", $("#Number_Of_DiningRooms").val());
        EditHouseForm.append("Number_Of_BedRooms", $("#Number_Of_BedRooms").val());
        EditHouseForm.append("Number_Of_WashRooms", $("#Number_Of_WashRooms").val());
        EditHouseForm.append("Number_Of_Kitchens", $("#Number_Of_Kitchens").val());
        EditHouseForm.append("Number_Of_StoreRooms", $("#Number_Of_StoreRooms").val());
        EditHouseForm.append("Number_Of_Garages", $("#Number_Of_Garages").val());
        EditHouseForm.append("Estimated_Value", $("#Estimated_Value").val());

        EditHouseForm.append("ImageFile", file[0]);

        $.ajax({
                    type: 'POST',
                    data: EditHouseForm,
                    url:'@Url.Action("EditHouse","Store")',
                    dataType: 'json',
                    contentType: false, // NEEDED, DON'T OMIT THIS (requires jQuery 1.6+)
                    processData: false, // NEEDED, DON'T OMIT THIS
                    //cache: false,
                    success: function (data)
                    {

                        if (data.validation != 0)
                        {

                            alert("Edit Sucessful!");
                            window.location.href = "/Store/UserPanel"

                        }
                        else
                        {

                            // DoSomethingElse()
                            alert("Creation Fail, Already Exist!");

                        }

                    },
                    error: function (response)
                    {

                        alert("error!");  //

                    }
               });

    }

    function readFile(input)
    {

        if (input.files && input.files[0])
        {
            var reader = new FileReader();

                /*Destroy jcrop initialization other wise it will hold it previous image in img tag*/
            if (jcropApi != null)
            {
                jcropApi.destroy();
            }
            reader.onload = function (e)
            {
                $('#img').attr('src', "");
                var img = $('#img').attr('src', e.target.result);

                    /*Current uploaded image size*/
                var width = img[0].height;
                var height = img[0].width;
                $("#lblWidth").text(width + "px");
                $("#lblHeight").text(height + "px");

                    //InitCrop must call here otherwise it will not work
                initCrop();
            }

                reader.readAsDataURL(input.files[0]);
        }
    }
