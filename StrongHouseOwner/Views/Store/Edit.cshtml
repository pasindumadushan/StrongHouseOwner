                            </div>

                            <div class="form-group col-md-4">
                                <label for="Ex_Number_Of_BedRooms">Number Of Bed Rooms</label>
                                <input type="text" class="form-control" name="Number_Of_BedRooms" id="Number_Of_BedRooms" aria-describedby="Number_Of_BedRooms_Help" value="@Model.NumberOfBedRooms" required>
                                <small id="Number_Of_BedRooms_Help" class="form-text text-muted"></small>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="Ex_Number_Of_WashRooms">Number Of Wash Rooms</label>
                                <input type="text" class="form-control" name="Number_Of_WashRooms" id="Number_Of_WashRooms" aria-describedby="Number_Of_WashRooms_Help" value="@Model.NumberOfWashRooms" required>
                                <small id="Number_Of_WashRooms_Help" class="form-text text-muted"></small>
                            </div>

                            <div class="form-group col-md-4">
                                <label for="Ex_Number_Of_Kitchens">Number Of Kitchens</label>
                                <input type="text" class="form-control" name="Number_Of_Kitchens" id="Number_Of_Kitchens" aria-describedby="Number_Of_Kitchens_Help" value="@Model.NumberOfKitchens" required>
                                <small id="Number_Of_Kitchens_Help" class="form-text text-muted"></small>
                            </div>

                            <div class="form-group col-md-4">
                                <label for="Ex_Number_Of_StoreRooms">Number Of Store Rooms</label>
                                <input type="text" class="form-control" name="Number_Of_StoreRooms" id="Number_Of_StoreRooms" aria-describedby="Number_Of_StoreRooms_Help" value="@Model.NumberOfStoreRooms" required>
                                <small id="Number_Of_StoreRooms_Help" class="form-text text-muted"></small>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="Ex_Number_Of_Garages">Number Of Garages</label>
                            <input type="text" class="form-control" name="Number_Of_Garages" id="Number_Of_Garages" aria-describedby="Number_Of_Garages_Help" value="@Model.NumberOfGarages" required>
                            <small id="Number_Of_Garages_Help" class="form-text text-muted"></small>
                        </div>

                        <div class="form-group">
                            <label for="Ex_Estimated_Value">Estimated Value</label>
                            <input type="text" class="form-control" name="Estimated_Value" id="Estimated_Value" aria-describedby="Estimated_Value_Help" value="@Model.EstimatedValue">
                            <small id="Estimated_Value_Help" class="form-text text-muted">Ex : Rs. 5 00 000</small>
                        </div>

                        <div class="form-group">

                            <label>House Image</label>

                            <div class="col-md-offset-2 col-md-10">
                                <input type="file" id="file" name="file">
                            </div>

                        </div>

                        <div class="form-group">

                            <div style="height:200px; width:200px; overflow:auto;">
                                <img id="img" alt="House Image">
                            </div>

                            <canvas id="canvas" height="5" width="5" style="vertical-align:top;"></canvas>


                        </div>

                        <input type="submit" class="btn btn-primary" id="EditHouse" value="Edit" />

                    </form>
