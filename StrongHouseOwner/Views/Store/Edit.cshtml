                            </div>

                            <div class="form-group col-md-6">
                                <label for="Ex_Land_Area">Land Area</label>
                                <input type="text" class="form-control" name="Land_Area" id="Land_Area" aria-describedby="Land_Area_Help" value="@Model.LandArea" style="max-width:100%;" required>
                                <small id="Land_Area_Help" class="form-text text-muted">Ex : 20000 sq.ft</small>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="Ex_Number_Of_LivingRooms">Number Of Living Rooms</label>
                                <input type="text" class="form-control" name="Number_Of_LivingRooms" id="Number_Of_LivingRooms" aria-describedby="Number_Of_LivingRooms_Help" value="@Model.NumberOfLivingRooms" required>
                                <small id="Number_Of_LivingRooms_Help" class="form-text text-muted"></small>
                            </div>

                            <div class="form-group col-md-4">
                                <label for="Ex_Number_Of_DiningRooms">Number Of Dining Rooms</label>
