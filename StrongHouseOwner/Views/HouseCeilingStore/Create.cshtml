<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script type="text/javascript">
    var imageCropWidth = 0;
    var imageCropHeight = 0;
    var cropPointX = 0;
    var cropPointY = 0;
    var jcropApi;

    $(document).ready(function ()
    {
        $(function () {

            jQuery.validator.addMethod("noSpace", function (value, element) {
                return value.indexOf(" ") < 0 && value != "";
            }, "No space please and don't leave it empty");

            jQuery.validator.addMethod("hyphenSeperation", function (value, element) {
                return value.indexOf("-") > 0  && value != "";
            }, "Please use only one hypen please and don't leave it empty");

            jQuery.validator.addMethod("exactlength", function (value, element, param) {
                return this.optional(element) || value.length == param;
            }, $.validator.format("Please enter exactly {0} characters."));

            $("#CreateHouseCeilingForm").validate({
                //errorLabelContainer: "#PasswordError",
                wrapper: "div",
                rules: {
                    Ceiling_Name: {
                        required: true,
                        maxlength: 20
                    },
                    Type_Of_Partition: {
                        required: true,
                        maxlength: 15
                    },
                    Ceiling_Category1: {
                        required: true,
                        maxlength: 50
                    },
                    Ceiling_Category2: {
                        required: true,
                        hyphenSeperation: true,
                        maxlength: 50
                    },
                    Ceiling_Area: {
                        required: true,
                        number: true,
                        maxlength: 10
                    }
                },

                messages: {
                    Ceiling_Name: {
                        required: "Please fill the field",
                        maxlength: "Please don't execeed maximum length 20"
                    },
                    Type_Of_Partition: {
                        required: "Please fill the field",
                        maxlength: "Please don't execeed maximum length 15"
                    },
                    Ceiling_Category1: {
                        required: "Please fill the field",
                        maxlength: "Please don't execeed maximum length 50"
                    },
                    Ceiling_Category2: {
                        required: "Please fill the field",
                        hyphenSeperation: "Please use only one hypen please and don't leave it empty",
                        maxlength: "Please don't execeed maximum length 50"
                    },
                    Ceiling_Area: {
                        required: "Please fill the field",
                        number: "Numbers only",
                        maxlength: "Please don't execeed maximum length 10"
                    }
                },

                submitHandler: function (form) {
                    getData();
                }
            });

        });
        $('#file').change(function () {
            readFile(this);
            //initCrop();
        });
    });

    function getData()
    {
        var CreateHouseCeilingForm = new FormData();
        var file = $('#file').get(0).files;




        if ($('#SelectCategory').is(":checked")) {
            var CategorySplit = $("#Ceiling_Category1").val().split("-");

            CreateHouseCeilingForm.append("Stored_Type_Of_Ceiling_Ref_Id", CategorySplit[0]);
            CreateHouseCeilingForm.append("Ceiling_Category", CategorySplit[1]);
            CreateHouseCeilingForm.append("Ceiling_Type", CategorySplit[2]);
        }
        else {
            var CategorySplit = $("#Ceiling_Category2").val().split("-");

            CreateHouseCeilingForm.append("Ceiling_Category", CategorySplit[0]);
            CreateHouseCeilingForm.append("Ceiling_Type", CategorySplit[1]);

        }


        CreateHouseCeilingForm.append("House_Ref_Id", @ViewBag.ViewBagHouseRefId);
        CreateHouseCeilingForm.append("Ceiling_Name", $("#Ceiling_Name").val());
        CreateHouseCeilingForm.append("Type_Of_Partition", $("#Type_Of_Partition").val());
        CreateHouseCeilingForm.append("Ceiling_Area", $("#Ceiling_Area").val());
        CreateHouseCeilingForm.append("ImageFile", file[0]);

        $.ajax({
                    type: 'POST',
                    data: CreateHouseCeilingForm,
                    url:'@Url.Action("CreateHouseCeiling","HouseCeilingStore")',
                    dataType: 'json',
                    contentType: false, // NEEDED, DON'T OMIT THIS (requires jQuery 1.6+)
                    processData: false, // NEEDED, DON'T OMIT THIS
                    //cache: false,
                    success: function (data)
                    {

                        if (data.validation == 1)
                        {

                            alert("Creation Sucessful");
                            window.location.href = "/HouseCeilingStore/CreateUpdate?storedCeilingId="+ data.storedCeilingId

                        }
                        else if (data.validation == 0)
                        {

                            // DoSomethingElse()
                            alert("Creation Fail, Already Exist!");

                        }
                        

                    },
                    error: function (response)
                    {

                        alert("error!");  //

                    }
               });
    }

    function readFile(input)
    {

        if (input.files && input.files[0])
        {
            var reader = new FileReader();

                /*Destroy jcrop initialization other wise it will hold it previous image in img tag*/
            if (jcropApi != null)
            {
                jcropApi.destroy();
            }
            reader.onload = function (e)
            {
                $('#img').attr('src', "");
                var img = $('#img').attr('src', e.target.result);

                    /*Current uploaded image size*/
                var width = img[0].height;
                var height = img[0].width;
                $("#lblWidth").text(width + "px");
                $("#lblHeight").text(height + "px");

                    //InitCrop must call here otherwise it will not work
                initCrop();
            }

                reader.readAsDataURL(input.files[0]);
        }
    }

</script>

