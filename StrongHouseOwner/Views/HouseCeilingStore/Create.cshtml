            <div class="bg-faded p-4 rounded">
                <div class="container">
                    <form id="CreateHouseCeilingForm" method="post" enctype="application/x-www-form-urlencoded" novalidate>

                        <div class="form-group">
                            <label for="Ex_Ceiling_Name">Ceiling Name</label>
                            <input type="text" class="form-control" name="Ceiling_Name" id="Ceiling_Name" aria-describedby="Ceiling_Name_Help" placeholder="" required>
                            <small id="Ceiling_Name_Help" class="form-text text-muted">Ex : Living Room Section A</small>
                        </div>

                        <div class="form-group">
                            <label for="Ex_Type_Of_Partition">Type Of Partition</label>
                            <div class="form-row">
                                <select class="custom-select" id="Type_Of_Partition" name="Type_Of_Partition" aria-describedby="Type_Of_Partition_Help" required>
                                    <option selected value="">Choose Type Of Partition...</option>
                                    <option value="Living Room">Living Room</option>
                                    <option value="Dining Room">Dining Room</option>
                                    <option value="Bed Room">Bed Room</option>
                                    <option value="Wash Room">Wash Room</option>
                                    <option value="Kitchen">Kitchen</option>
                                    <option value="Garage">Garage</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>

                        <label class="checkbox-inline">
                            <input type="checkbox" id="SelectCategory" name="SelectCategory" checked data-toggle="toggle" data-on="Select" data-off="Create New" data-onstyle="primary" data-offstyle="info">
                        </label>

                        <div class="form-group">
                            <label for="Ex_Ceiling_Category">Category</label>
                            <div class="form-row">
                                <select class="custom-select" id="Ceiling_Category1" name="Ceiling_Category1" aria-describedby="Ceiling_Category1_Help" required>
                                    <option selected value="">Choose Type Of Category...</option>
                                    @foreach (var item in Model)
                                    {
                                        <option value="@(item.CeilingTypeId+"-"+item.CeilingTypeCategory+"-"+item.CeilingType)">@item.CeilingTypeCategory - @item.CeilingType</option>
                                    }
                                </select>
                                <input type="text" class="form-control" name="Ceiling_Category2" id="Ceiling_Category2" aria-describedby="Ceiling_Category2_Help" placeholder="" required>
                                <small id="Ceiling_Category2" class="form-text text-muted" style="padding-left: 10px;">Ex : Seperate category and type with "-"  (Porcelain and Ceramic - Granite) .</small>
                            </div>
                        </div>



                        <div class="form-group">
                            <label for="Ex_Ceiling_Area">Ceiling Area</label>
                            <input type="text" class="form-control input-lg" name="Ceiling_Area" id="Ceiling_Area" aria-describedby="Ceiling_Area_Help" placeholder="" style="max-width:100%;">
                            <small id="Ceiling_Area_Help" class="form-text text-muted">Ex : 20000 sq.ft</small>
                        </div>

                        <div class="form-group">

                            <label>Ceiling Image</label>

                            <div class="col-md-offset-2 col-md-10">
                                <input type="file" id="file" name="file">
                            </div>

                        </div>

                        <div class="form-group">

                            <div style="height:200px; width:200px; overflow:auto;">
                                <img id="img" alt="Ceiling Image">
                            </div>

                            <canvas id="canvas" height="5" width="5" style="vertical-align:top;"></canvas>


                        </div>

                        <input type="submit" class="btn btn-primary" id="CreateHouseCeiling" value="Create" />

                    </form>

                    <script>
                        $('#SelectCategory').change(function () {
                            if ($('#SelectCategory').is(":checked")) {
                                $("#Ceiling_Category1").attr("disabled", false);
                                $("#Ceiling_Category2").attr("disabled", true);
                            }
                            else {
                                $("#Ceiling_Category1").attr("disabled", true);
                                $("#Ceiling_Category2").attr("disabled", false);

                            }
                        });
                        $('#SelectCategory').trigger('change');
                        
                    </script>

                </div>
