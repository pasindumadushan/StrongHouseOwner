    <div id="page-content-wrapper">
        <nav class="navbar expand navbar-light bg-light border-bottom">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                 <h1 style="color:#000;">Strong House Owner Account Reset</h1>
            </div>
        </nav>
    </div>

    <!-- main -->
    <div class="main-w3layouts wrapper">
        <div class="main-agileinfo">
            <div class="agileits-top">
                <form id="EmailConfirmForm" novalidate>
                    <input class="text email" type="text" name="User_Mail" id="User_Mail" placeholder="User mail address" required>
                    <input id="EmailConfirm" type="submit" value="Send a recovery code" />
                </form>

                <p>Don't have an Account? <a href="@Url.Action("Index", "Registration")"> SignUp Now!</a></p>
            </div>
        </div>
