</html>

<script type="text/javascript">

    $(document).ready(function ()
    {
        $('#EmailConfirm').on('click', function() {

            $("#EmailConfirmForm").validate({
                errorLabelContainer: "#PasswordError",
                rules: {
                    User_Mail: {
                        required: true,
                        email: true
                    }
                },
                messages: {
                    User_Mail: {
                        required: "Please provide a Email",
                        email: "Please provide valid email"
                    }
                },
                submitHandler: function (form) {
                    getData();
                }
            });
        });
    });

    function getData()
    {

        var EmailConfirmForm = new FormData();

        EmailConfirmForm.append("User_Mail", $("#User_Mail").val());

        $.ajax({
                    type: 'POST',
                    data: EmailConfirmForm,
                    url:'@Url.Action("EmailConfirm","ValidateUser")',
                    dataType: 'json',
                    contentType: false, // NEEDED, DON'T OMIT THIS (requires jQuery 1.6+)
                    processData: false, // NEEDED, DON'T OMIT THIS
                    //cache: false,
                    success: function (data)
                    {

                        if(data.validation == 0)
                        {
                            alert("Wrong email address");
                        }
                        else
                        {
                            window.location.href = "/ValidateUser/UpdatePassword/?userMail="+$("#User_Mail").val()
                        }
                       
                                                
                    },
                    error: function (response)
                    {

                        alert("error!");  //

                    }
               });

    }
</script>
