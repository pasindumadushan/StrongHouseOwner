<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script type="text/javascript">
    var imageCropWidth = 0;
    var imageCropHeight = 0;
    var cropPointX = 0;
    var cropPointY = 0;
    var jcropApi;

    $(document).ready(function ()
    {
        $(function () {

            jQuery.validator.addMethod("noSpace", function (value, element)
            {
                return value.indexOf(" ") < 0 && value != "";
            }, "No space please and don't leave it empty");

            jQuery.validator.addMethod("exactlength", function (value, element, param)
            {
                return this.optional(element) || value.length == param;
            }, $.validator.format("Please enter exactly {0} characters."));

            jQuery.validator.addMethod("filesize_max", function (value, element, param) {
                 var isOptional = this.optional(element),
                     file;

                 if (isOptional) {
                     return isOptional;
                 }

                 if ($(element).attr("type") === "file") {

                     if (element.files && element.files.length) {

                         file = element.files[0];
                         return (file.size && file.size <= param);
                     }
                 }
                 return false;
             }, "File size is too large.");

            $("#Sample").validate({
                //errorLabelContainer: "#PasswordError",
                wrapper: "div",
                rules: {
                    Ceiling_Type_Sample_Code: {
                        maxlength: 6
                    },
                    Ceiling_Type_Sample_Name: {
                        required: true,
                        maxlength: 10
                    },
                    Ceiling_Type_Sample_Height: {
                        required: true,
                        digits: true,
                        maxlength: 3
                    },
                    Ceiling_Type_Sample_Width: {
                        required: true,
                        digits: true,
                        maxlength: 3
                    },
                    Ceiling_Type_Sample_Price: {
                        required: true,
                        number: true,
                        maxlength: 5
                    },
                    file: {
                        filesize_max:800000
                    }
                },

                messages: {
                    Ceiling_Type_Sample_Code: {
                        maxlength: "Please don't execeed maximum length 6"
                    },
                    Ceiling_Type_Sample_Name: {
                        required: "Please fill the field",
                        maxlength: "Please don't execeed maximum length 10"
                    },
                    Ceiling_Type_Sample_Height: {
                        required: "Please fill the field",
                        digits: "Please use valid input",
                        maxlength: "Please don't execeed maximum length 3"
                    },
                    Ceiling_Type_Sample_Width: {
                        required: "Please fill the field",
                        digits: "Please use valid input",
                        maxlength: "Please don't execeed maximum length 3"
                    },
                    Ceiling_Type_Sample_Price: {
                        required: "Please fill the field",
                        number: "Numbers only",
                        maxlength: "Please don't execeed maximum length 5"
                    },
                    file: {
                        filesize_max: "File too large please input less than 800KB"
                    }
                },

                submitHandler: function (form) {
                    getData();
                }

            });
        });
        $('#file').change(function () {
            readFile(this);
            //initCrop();
        });

    });

    function getData() {

        var file = $('#file').get(0).files;

        var SubmitSample = new FormData();

        SubmitSample.append("Ref_Ceiling_Type_Id", @ViewBag.ViewBagRefceilingTypeId);
        SubmitSample.append("Ceiling_Type_Sample_Code", $("#Ceiling_Type_Sample_Code").val());
        SubmitSample.append("Ceiling_Type_Sample_Name", $("#Ceiling_Type_Sample_Name").val());
        SubmitSample.append("Ceiling_Type_Sample_Height", $("#Ceiling_Type_Sample_Height").val());
        SubmitSample.append("Ceiling_Type_Sample_Width", $("#Ceiling_Type_Sample_Width").val());
        SubmitSample.append("Ceiling_Type_Sample_Price", $("#Ceiling_Type_Sample_Price").val());
        SubmitSample.append("ImageFile", file[0]);

        $.ajax({
                    type: 'POST',
                    data: SubmitSample,
                    url:'@Url.Action("CreateSampleSubmit","Ceiling")',
                    dataType: 'json',
                    contentType: false, // NEEDED, DON'T OMIT THIS (requires jQuery 1.6+)
                    processData: false, // NEEDED, DON'T OMIT THIS
                    //cache: false,
                    success: function (data)
                    {

                        if (data.validation == 0)
                        {

                            alert("Creation Sucessful!");
                            window.location.href = "/Ceiling/Samples?ceilingTypeId="+@ViewBag.ViewBagRefceilingTypeId

                        }
                        else if (data.validation == 1)
                        {

                            // DoSomethingElse()
                            alert("Creation Fail, Already Exist!");

                        }

                    },
                    error: function (response)
                    {

                        alert("error!");  //

                    }
               });

    }
    function readFile(input)
    {

        if (input.files && input.files[0])
        {
            var reader = new FileReader();

                /*Destroy jcrop initialization other wise it will hold it previous image in img tag*/
            if (jcropApi != null)
            {
                jcropApi.destroy();
            }
            reader.onload = function (e)
            {
                $('#img').attr('src', "");
                var img = $('#img').attr('src', e.target.result);

                    /*Current uploaded image size*/
                var width = img[0].height;
                var height = img[0].width;
                $("#lblWidth").text(width + "px");
                $("#lblHeight").text(height + "px");

                    //InitCrop must call here otherwise it will not work
                initCrop();
            }

                reader.readAsDataURL(input.files[0]);
        }
    }

</script>
