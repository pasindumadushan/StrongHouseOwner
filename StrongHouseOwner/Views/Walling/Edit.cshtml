<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js" integrity="sha256-BJeo0qm959uMBGb65z40ejJYGSgR7REI4+CW1fNKwOg=" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
<script type="text/javascript">
    var imageCropWidth = 0;
    var imageCropHeight = 0;
    var cropPointX = 0;
    var cropPointY = 0;
    var jcropApi;

    $(window).on('load', function () {
        $('#myModal').modal('show');
    });
    $(document).ready(function ()
    {
        $("#btnSubmitClose").click(function ()
        {
            window.location.href = "/Walling/ListOfWallingTypes";
        });
        $('#file').change(function () {
            readFile(this);
            //initCrop();
        });

        $(function () {

            jQuery.validator.addMethod("noSpace", function (value, element)
            {
                return value.indexOf(" ") < 0 && value != "";
            }, "No space please and don't leave it empty");

            jQuery.validator.addMethod("exactlength", function (value, element, param)
            {
                return this.optional(element) || value.length == param;
            }, $.validator.format("Please enter exactly {0} characters."));

            $("#myModalForm").validate({
                //errorLabelContainer: "#PasswordError",
                wrapper: "div",
                rules: {
                    wallingTypeCategory: {
                        required: true
                    },
                    wallingType: {
                        required: true
                    },
                    wallingTypeDetails: {
                        maxlength: 500
                    },
                    wallingTypeAdvantage: {
                        maxlength: 500
                    },
                    wallingTypeDisadvantage: {
                        maxlength: 500
                    },
                    wallingTypeBestUse: {
                        maxlength: 500
                    },
                    wallingTypeReinstall: {
                        maxlength: 500
                    }
                },

                messages: {
                    wallingTypeCategory: {
                        required: "Please provide a Category"
                    },
                    wallingType: {
                        required: "Please provide a Type"
                    },
                    wallingTypeDetails: {
                        maxlength: "Please don't execeed maximum length 500"
                    },
                    wallingTypeAdvantage: {
                        maxlength: "Please don't execeed maximum length 500"
                    },
                    wallingTypeDisadvantage: {
                        maxlength: "Please don't execeed maximum length 500"
                    },
                    wallingTypeBestUse: {
                        maxlength: "Please don't execeed maximum length 500"
                    },
                    wallingTypeReinstall: {
                        maxlength: "Please don't execeed maximum length 500"
                    }
                },

                submitHandler: function (form) {
                    getData();
                }

            });
        });

    });

    function getData()
    {

        var EditWallingType = new FormData();

        var file = $('#file').get(0).files;

        EditWallingType.append("walling_Type_Id", @ViewBag.wallingTypeId);
        EditWallingType.append("walling_Type_Category", $("#wallingTypeCategory").val());
        EditWallingType.append("walling_Type", $("#wallingType").val());
        EditWallingType.append("walling_Type_Details", $("#wallingTypeDetails").val());
        EditWallingType.append("walling_Type_Advantage", $("#wallingTypeAdvantage").val());
        EditWallingType.append("walling_Type_Disadvantage", $("#wallingTypeDisadvantage").val());
        EditWallingType.append("walling_Type_BestUse", $("#wallingTypeBestUse").val());
        EditWallingType.append("walling_Type_Reinstall", $("#wallingTypeReinstall").val());

        EditWallingType.append("ImageFile", file[0]);

        $.ajax({
                    type: 'POST',
                    data: EditWallingType,
                    url:'@Url.Action("EditWallingType","Walling")',
                    dataType: 'json',
                    contentType: false, // NEEDED, DON'T OMIT THIS (requires jQuery 1.6+)
                    processData: false, // NEEDED, DON'T OMIT THIS
                    //cache: false,
                    success: function (response)
                    {

                        if (response.WallingTypeId != null || response.WallingTypeId != "")
                        {
                            window.location.href = "/Walling/ListOfWallingTypes"
                        }


                    },
                    error: function (response)
                    {

                        alert("error!");  //

                    }
               });

    }

    function readFile(input)
    {

        if (input.files && input.files[0])
        {
            var reader = new FileReader();

                /*Destroy jcrop initialization other wise it will hold it previous image in img tag*/
            if (jcropApi != null)
            {
                jcropApi.destroy();
            }
            reader.onload = function (e)
            {
                $('#imgEmpPhoto').attr('src', "");
                var img = $('#imgEmpPhoto').attr('src', e.target.result);

                    /*Current uploaded image size*/
                var width = img[0].height;
                var height = img[0].width;
                $("#lblWidth").text(width + "px");
                $("#lblHeight").text(height + "px");

                    //InitCrop must call here otherwise it will not work
                initCrop();
            }

                reader.readAsDataURL(input.files[0]);
        }
    }

</script>
