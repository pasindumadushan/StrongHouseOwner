            <div class="bg-faded p-4 rounded">
                <div class="container" style="margin-right:0px;margin-left:0;padding-right:0px;padding-left:0px;width:100%;">
                    <div class="row">
                        <!--start sticky buttons-->
                        <div id="HorizontalScroll" style="padding-left:15px;">
                            <button class="btn btn-primary" id="left-button"><span class="glyphicon glyphicon-chevron-left"></span></button>
                            <button class="btn btn-primary" id="right-button"><span class="glyphicon glyphicon-chevron-right"></span></button>
                        </div>
                        <!--end sticky buttons-->
                        <div class="col-md-12">
                            <div class="table-responsive" style="overflow-x:hidden;">

                                <div class="center" id="content" style="float:left;width:100%;height:100%;margin:1px;overflow:hidden;">

                                    <table id="mytable" class="table table-bordred table-striped">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th>WallingTypeImage</th>
                                                <th>WallingTypeCategory</th>
                                                <th>WallingType</th>
                                                <th>WallingTypeDetails</th>
                                                <th>WallingTypeAdvantage</th>
                                                <th>WallingTypeDisadvantage</th>
                                                <th>WallingTypeBestUse</th>
                                                <th>WallingTypeReinstall</th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>

                                        <tbody class="thead-light">
                                            @{int i = 0;}

                                            @foreach (var item in Model)
                                            {

                                                <tr>
                                                    <td scope="row">@(i = i + 1)</td>

                                                    <td>
                                                        @if (item.WallingTypeImage == null || item.WallingTypeImage == "")
                                                        {
                                                            <a class="thumbnail pull-left" href="#"> <img class="media-object" src="http://icons.iconarchive.com/icons/custom-icon-design/flatastic-2/72/product-icon.png" style="width: 72px; height: 72px;"> </a>
                                                        }
                                                        else
                                                        {
                                                            <a class="thumbnail pull-left" href="#"> <img class="media-object" src="@Url.Content(@item.WallingTypeImage)" style="width: 72px; height: 72px;"> </a>
                                                        }
                                                    </td>
                                                    <td>@item.WallingTypeCategory</td>

                                                    <td>@item.WallingType</td>

                                                    <td>@item.WallingTypeDetails</td>
                                                    <td>@item.WallingTypeAdvantage</td>
                                                    <td>@item.WallingTypeDisadvantage</td>
                                                    <td>@item.WallingTypeBestUse</td>
                                                    <td>@item.WallingTypeReinstall</td>

                                                    <td>
                                                        <p data-placement="top" data-toggle="tooltip" title="More">
                                                            <button class="btn btn-primary btn-xs" data-title="Samples" data-toggle="modal" data-id="@item.WallingTypeId" onclick="location.href='@Url.Action("Samples", "Walling",new { wallingTypeId = item.WallingTypeId })'"><span class=" glyphicon glyphicon-list"></span></button>
                                                        </p>
                                                    </td>
                                                    <td>
                                                        <p data-placement="top" data-toggle="tooltip" title="Edit">
                                                            <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-id="@item.WallingTypeId" onclick="location.href='@Url.Action("Edit", "Walling",new { wallingTypeId = item.WallingTypeId })'"><span class="glyphicon glyphicon-pencil"></span></button>
                                                        </p>
                                                    </td>
                                                    <td>
                                                        <p data-placement="top" data-toggle="tooltip" title="Delete">
                                                            <button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-id="@item.WallingTypeId" onclick="location.href='@Url.Action("Delete", "Walling",new { wallingTypeId = item.WallingTypeId })'"><span class="glyphicon glyphicon-trash"></span></button>
                                                        </p>
                                                    </td>
                                                </tr>

                                            }
                                        </tbody>
                                    </table>
                                    <span class="glyphicon glyphicon-pencil">
                                        <form id="myModalForm" method="post" enctype="application/x-www-form-urlencoded" novalidate>
                                            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true" data-backdrop="false">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <div class="row" style="width:100%;">
                                                                <div class="col-md-9">
                                                                    <h4 class="modal-title custom_align" id="Heading">Edit Detail</h4>
                                                                </div>
                                                                <div class="col-md-3">
                                                                    <button type="button" id="btnSubmitClose" class="close" data-dismiss="modal" aria-hidden="true" style="padding-right: 0px;padding-top: 0px;padding-bottom: 0px;padding-left: 0px; margin-top: 0px;margin-bottom: 0px;margin-right: 0px;"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div class="form-group">
                                                                <label>Category</label>
                                                                <input id="wallingTypeCategory" name="wallingTypeCategory" class="form-control " type="text" value=@ViewBag.wallingTypeCategory required>
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Type</label>
                                                                <input id="wallingType" name="wallingType" class="form-control " type="text" value=@ViewBag.wallingType required>
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Details</label>
                                                                <textarea id="wallingTypeDetails" name="wallingTypeDetails" rows="2" class="form-control">@ViewBag.wallingTypeDetails</textarea>
                                                            </div>

                                                            <div class="form-group">
                                                                <label>Advantage</label>
                                                                <textarea id="wallingTypeAdvantage" name="wallingTypeAdvantage" rows="2" class="form-control">@ViewBag.wallingTypeAdvantage</textarea>
                                                            </div>

                                                            <div class="form-group">
                                                                <label>Disadvantage</label>
                                                                <textarea id="wallingTypeDisadvantage" name="wallingTypeDisadvantage" rows="2" class="form-control">@ViewBag.wallingTypeDisadvantage</textarea>
                                                            </div>

                                                            <div class="form-group">
                                                                <label>BestUse</label>
                                                                <textarea id="wallingTypeBestUse" name="wallingTypeBestUse" rows="2" class="form-control">@ViewBag.wallingTypeBestUse</textarea>
                                                            </div>

                                                            <div class="form-group">
