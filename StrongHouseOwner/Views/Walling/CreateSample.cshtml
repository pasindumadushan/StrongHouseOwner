<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script type="text/javascript">
    var imageCropWidth = 0;
    var imageCropHeight = 0;
    var cropPointX = 0;
    var cropPointY = 0;
    var jcropApi;

    $(document).ready(function () {
        $(function () {

            jQuery.validator.addMethod("noSpace", function (value, element) {
                return value.indexOf(" ") < 0 && value != "";
            }, "No space please and don't leave it empty");

            jQuery.validator.addMethod("exactlength", function (value, element, param) {
                return this.optional(element) || value.length == param;
            }, $.validator.format("Please enter exactly {0} characters."));

            $("#Sample").validate({
                //errorLabelContainer: "#PasswordError",
                wrapper: "div",
                rules: {
                    Walling_Type_Sample_Name: {
                        required: true,
                        maxlength: 10
                    },
                    Walling_Type_Brand: {
                        required: true,
                        maxlength: 10
                    },
                    Walling_Type_Sample_Price: {
                        required: true,
                        number: true,
                        maxlength: 8
                    }
                },

                messages: {
                    Walling_Type_Sample_Name: {
                        required: "Please fill the field",
                        maxlength: "Please don't execeed maximum length 10"
                    },
                    Walling_Type_Brand: {
                        required: "Please fill the field",
                        maxlength: "Please don't execeed maximum length 10"
                    },
                    Walling_Type_Sample_Price: {
                        required: "Please fill the field",
                        number: "Numbers only",
                        maxlength: "Please don't execeed maximum length 8"
                    }
                },

                submitHandler: function (form) {
                    getData();
                }
            });
           
        });
         $('#file').change(function () {
                readFile(this);
                //initCrop();
         });
    });



    function getData() {

        var SubmitSample = new FormData();

        var file = $('#file').get(0).files;

        if ($('#PaintOrTile').is(":checked")) {
            $("#PaintOrTile").attr('value', 'true');
        }
        else {
            $("#PaintOrTile").attr('value', 'false');
        }


        SubmitSample.append("Ref_Walling_Type_Id", @ViewBag.ViewBagRefWallingTypeId);
        SubmitSample.append("Paint_Or_Tile", $("#PaintOrTile").val());
        SubmitSample.append("Walling_Type_Sample_Code", $("#Walling_Type_Sample_Code").val());
        SubmitSample.append("Walling_Type_Sample_Name", $("#Walling_Type_Sample_Name").val());
        SubmitSample.append("Walling_Type_Brand", $("#Walling_Type_Brand").val());
        SubmitSample.append("Walling_Type_Sample_Height", $("#Walling_Type_Sample_Height").val());
        SubmitSample.append("Walling_Type_Sample_Width", $("#Walling_Type_Sample_Width").val());
        SubmitSample.append("Walling_Milliliters", $("#Walling_Milliliters").val());
        SubmitSample.append("Walling_Type_Sample_Price", $("#Walling_Type_Sample_Price").val());
        SubmitSample.append("ImageFile", file[0]);

        $.ajax({
                    type: 'POST',
                    data: SubmitSample,
                    url:'@Url.Action("CreateSampleSubmit","Walling")',
                    dataType: 'json',
                    contentType: false, // NEEDED, DON'T OMIT THIS (requires jQuery 1.6+)
                    processData: false, // NEEDED, DON'T OMIT THIS
                    //cache: false,
                    success: function (data)
                    {

                        if (data.validation == 0)
                        {

                            alert("Creation Sucessful!");
                            window.location.href = "/Walling/Samples?WallingTypeId="+@ViewBag.ViewBagRefWallingTypeId

                        }
                        else if (data.validation == 1)
                        {

                            // DoSomethingElse()
                            alert("Creation Fail, Already Exist!");

                        }

                    },
                    error: function (response)
                    {

                        alert("error!");  //

                    }
               });

        }
        function readFile(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                /*Destroy jcrop initialization other wise it will hold it previous image in img tag*/
                if (jcropApi != null) {
                    jcropApi.destroy();
                }
                reader.onload = function (e) {
                    $('#img').attr('src', "");
                    var img = $('#img').attr('src', e.target.result);

                    /*Current uploaded image size*/
                    var width = img[0].height;
                    var height = img[0].width;
                    $("#lblWidth").text(width + "px");
                    $("#lblHeight").text(height + "px");

                    //InitCrop must call here otherwise it will not work
                    initCrop();
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

</script>
