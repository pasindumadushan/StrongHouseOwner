            <div class="bg-faded p-4 rounded">
                <div class="container">
                    <form id="CreateHouseFlooringForm" method="post" enctype="application/x-www-form-urlencoded" novalidate>

                        <label class="checkbox-inline">
                            <input type="checkbox" id="SelectSample" name="SelectSample" checked data-toggle="toggle" data-on="Select From Products" data-off="Create New" data-onstyle="primary" data-offstyle="info">
                        </label>

                        <label class="checkbox-inline">
                            <input type="checkbox" id="PaintOrTile" name="SelectSample" checked data-toggle="toggle" data-on="Tile" data-off="Paint" data-onstyle="primary" data-offstyle="info">
                        </label>

                        <div class="form-group">
                            <label for="Ex_Flooring_Sample_Name">Sample Name</label>
                            <div class="form-row">
                                <select class="custom-select" id="Flooring_Sample_Name1" name="Flooring_Sample_Name1" aria-describedby="Flooring_Sample_Name1_Help" required>
                                    <option selected value="">Choose Type Of Sample...</option>
                                    @foreach (var item in Model.Select(s => new { s.FlooringTypeSampleName, s.FlooringTypeSampleCode }).Distinct().ToArray())
                                    {

                                        if (@item.FlooringTypeSampleCode == "" || @item.FlooringTypeSampleCode == null)
                                        {
                                            <option value="@(item.FlooringTypeSampleName)">@item.FlooringTypeSampleName</option>
                                        }
                                        else if (@item.FlooringTypeSampleCode != "" || @item.FlooringTypeSampleCode != null)
                                        {
                                            <option value="@(item.FlooringTypeSampleName+"-"+item.FlooringTypeSampleCode)">@item.FlooringTypeSampleCode - @item.FlooringTypeSampleName</option>
                                        }

                                    }
                                </select>
                                <input type="text" class="form-control" name="Flooring_Sample_Name2" id="Flooring_Sample_Name2" aria-describedby="Flooring_Sample_Name2_Help" placeholder="" required>
                                <small id="Flooring_Sample_Name2" class="form-text text-muted" style="padding-left: 10px;">Ex : Oak</small>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="Ex_Flooring_Sample_Code">Code</label>
                            <input type="text" class="form-control input-lg" name="Flooring_Sample_Code" id="Flooring_Sample_Code" aria-describedby="Flooring_Sample_Code_Help" placeholder="" style="max-width:100%;">
                            <small id="Flooring_Sample_Code_Help" class="form-text text-muted">Ex : C0203</small>
                        </div>

                        <div class="form-group">
                            <label for="Ex_Flooring_Sample_Brand">Brand</label>
                            <input type="text" class="form-control input-lg" name="Flooring_Sample_Brand" id="Flooring_Sample_Brand" aria-describedby="Flooring_Sample_Brand_Help" placeholder="" style="max-width:100%;" required>
                            <small id="Flooring_Sample_Brand_Help" class="form-text text-muted">Ex : Macktiles</small>
                        </div>

                        <div class="form-group">
                            <label for="Ex_Flooring_Type_Sample_Size">Size</label>
                            <div class="form-row">
                                <select class="custom-select" id="Flooring_Type_Sample_Size" name="Flooring_Type_Sample_Size" aria-describedby="Flooring_Type_Sample_Size_Help" required>
                                    <option selected value="">Choose Type Of Sample...</option>
                                </select>
                                <table>
                                    <tr>
                                        <td><input type="text" class="form-control" id="Flooring_Type_Sample_Height" name="Flooring_Type_Sample_Height" aria-describedby="Flooring_Type_Sample_Size_Help" placeholder="Height" required></td>
                                        <td></td>
                                        <td><input type="text" class="form-control" id="Flooring_Type_Sample_Width" name="Flooring_Type_Sample_Width" aria-describedby="Flooring_Type_Sample_Size_Help" placeholder="Width" required></td>
                                        <td></td>
                                    </tr>
                                </table>
                                <small id="Flooring_Type_Sample_Size_Help" class="form-text text-muted">Ex : 4x4"</small>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="Ex_Flooring_Mililiters">Mililiters</label>
                            <input type="text" class="form-control input-lg" name="Flooring_Mililiters" id="Flooring_Mililiters" aria-describedby="Flooring_Mililiters_Help" placeholder="" style="max-width:100%;" required>
                            <small id="Flooring_Mililiters_Help" class="form-text text-muted">Ex : 1000ml</small>
                        </div>

                        <div class="form-group">
                            <label for="Ex_Flooring_Sample_Price">Sample Price</label>
                            <input type="text" class="form-control input-lg" name="Flooring_Sample_Price" id="Flooring_Sample_Price" aria-describedby="Flooring_Sample_Price_Help" placeholder="" style="max-width:100%;" required>
                            <small id="Flooring_Sample_Price_Help" class="form-text text-muted">Ex : Rs.1350 per 1000ml or Rs.95 per tile</small>
                        </div>

                        <div class="form-group">
                            <label for="Ex_Flooring_Sample_Min_Amount">Minimal Amount</label>
                            <input type="text" class="form-control input-lg" name="Flooring_Sample_Min_Amount" id="Flooring_Sample_Min_Amount" aria-describedby="Flooring_Sample_Min_Amount_Help" placeholder="" style="max-width:100%;" required>
                            <small id="Flooring_Sample_Min_Amount_Help" class="form-text text-muted">Ex : Fill Number of tiles or mililiter of paint per walling area</small>
                        </div>

                        <div class="form-group">
                            <label for="Ex_Flooring_Sample_Total_Cost">Total Cost</label>
                            <input type="text" class="form-control input-lg" name="Flooring_Sample_Total_Cost" id="Flooring_Sample_Total_Cost" aria-describedby="Flooring_Sample_Total_Cost_Help" placeholder="" style="max-width:100%;" required>
                            <small id="Flooring_Sample_Total_Cost_Help" class="form-text text-muted">Ex : Total cost</small>
                        </div>


                        <input type="submit" class="btn btn-primary" id="CreateHouseFlooring" value="Create" />

                    </form>

                    <script>
                        $('#SelectSample').change(function () {
                            if ($('#SelectSample').is(":checked")) {
                                $("#Flooring_Sample_Name1").attr("disabled", false);
                                $("#Flooring_Sample_Name2").attr("disabled", true);
                                $("#Flooring_Sample_Code").attr("disabled", true);
                                if ($('#PaintOrTile').is(":checked")) {
                                    $("#Flooring_Type_Sample_Size").attr("disabled", false);
                                    $("#Flooring_Type_Sample_Height").attr("disabled", true);
                                    $("#Flooring_Type_Sample_Width").attr("disabled", true);
                                }
                                else {
                                    $("#Flooring_Type_Sample_Size").attr("disabled", true);
                                    $("#Flooring_Type_Sample_Height").attr("disabled", true);
                                    $("#Flooring_Type_Sample_Width").attr("disabled", true);
                                }
                            }
                            else {
                                $("#Flooring_Sample_Name1").attr("disabled", true);
                                $("#Flooring_Sample_Name2").attr("disabled", false);
                                $("#Flooring_Sample_Code").attr("disabled", false);
                                if ($('#PaintOrTile').is(":checked")) {
                                    $("#Flooring_Type_Sample_Size").attr("disabled", true);
                                    $("#Flooring_Type_Sample_Height").attr("disabled", false);
                                    $("#Flooring_Type_Sample_Width").attr("disabled", false);
                                }
                                else {
                                    $("#Flooring_Type_Sample_Size").attr("disabled", true);
                                    $("#Flooring_Type_Sample_Height").attr("disabled", true);
                                    $("#Flooring_Type_Sample_Width").attr("disabled", true);
                                }

                            }
                        });
                        $('#SelectSample').trigger('change');

                        $('#PaintOrTile').change(function () {
                            if ($('#PaintOrTile').is(":checked")) {
                                $("#Flooring_Mililiters").attr("disabled", true);
                                if ($('#SelectSample').is(":checked")) {
                                    $("#Flooring_Sample_Name1").attr("disabled", false);
                                    $("#Flooring_Sample_Name2").attr("disabled", true);
                                    $("#Flooring_Sample_Code").attr("disabled", true);
                                    $("#Flooring_Type_Sample_Size").attr("disabled", false);
                                    $("#Flooring_Type_Sample_Height").attr("disabled", true);
                                    $("#Flooring_Type_Sample_Width").attr("disabled", true);
                                }
                                else {
                                    $("#Flooring_Sample_Name1").attr("disabled", true);
                                    $("#Flooring_Sample_Name2").attr("disabled", false);
                                    $("#Flooring_Sample_Code").attr("disabled", false);
                                    $("#Flooring_Type_Sample_Size").attr("disabled", true);
                                    $("#Flooring_Type_Sample_Height").attr("disabled", false);
                                    $("#Flooring_Type_Sample_Width").attr("disabled", false);

                                }
                            }
                            else {
                                $("#Flooring_Mililiters").attr("disabled", false);
                                $("#Flooring_Type_Sample_Size").attr("disabled", true);
                                $("#Flooring_Type_Sample_Height").attr("disabled", true);
                                $("#Flooring_Type_Sample_Width").attr("disabled", true);
                            }
                        });
                        $('#PaintOrTile').trigger('change');

                    </script>

                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>




    <!-- Modal: modalQuickView -->



    <footer class="footer text-faded text-center py-5">
        <div class="container">
            <p class="m-0 small">Copyright &copy; Your Website 2020</p>
        </div>
    </footer>

</body>
</html>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script type="text/javascript">
    var imageCropWidth = 0;
    var imageCropHeight = 0;
    var cropPointX = 0;
    var cropPointY = 0;
    var jcropApi;

    $(document).ready(function ()
    {
        $("#Flooring_Sample_Name1").change(function () {

            var flooringTypeSampleNC = $(this).val().split("-");
            var flooringTypeId = @ViewBag.ViewBagTypeOfFlooringRefId;
            $.ajax({
                    data: { "flooringTypeSampleName": flooringTypeSampleNC[0] ,"flooringTypeSampleCode": flooringTypeSampleNC[1], "flooringTypeId": flooringTypeId},
                    url: '@Url.Action("PopulateDropDownList","HouseFlooringStore")',
                    datatype: "json",
                success: function (data) {
                    $("#Flooring_Type_Sample_Size").empty();
                    var size = $('#Flooring_Type_Sample_Size');
                    $.each(data, function (val, text) {
                        var sizeAndPrice = text;
                        var sizeAndPriceArr = sizeAndPrice.split("x");
                            size.append(
                                $('<option></option>').val(text).html(sizeAndPriceArr[0]+"x"+sizeAndPriceArr[1])
                            );
                        });

                    },
                })

        });

        $("#Flooring_Type_Sample_Size").change(function () {
            var flooringTypeSampleSize = $(this).val().split("x");
            var flooringArea = @ViewBag.ViewBagFlooringArea;
            $.ajax({
                    data: { "height": flooringTypeSampleSize[0] ,"width": flooringTypeSampleSize[1], "area": flooringArea},
                    url: '@Url.Action("MinimalAmountCalculatorForTiles","HouseFlooringStore")',
                    datatype: "json",
                    success: function (data) {
                        $("#Flooring_Sample_Min_Amount").val(data);
                        $("#Flooring_Sample_Price").val(flooringTypeSampleSize[2]);
                    },
                })
        });

        $("#Flooring_Type_Sample_Width").change(function () {
            var flooringTypeSampleSizeWidth = $(this).val();
            var flooringTypeSampleSizeHeight = $('#Flooring_Type_Sample_Height').val();
            var flooringArea = @ViewBag.ViewBagFlooringArea;
            $.ajax({
                    data: { "height": flooringTypeSampleSizeHeight ,"width": flooringTypeSampleSizeWidth, "area": flooringArea},
                    url: '@Url.Action("MinimalAmountCalculatorForTiles","HouseFlooringStore")',
                    datatype: "json",
                    success: function (data) {
                        $("#Flooring_Sample_Min_Amount").val(data);
                    },
                })
        });

        $("#Flooring_Sample_Price").change(function () {
            var flooringSampleMinAmount = $('#Flooring_Sample_Min_Amount').val();
            var flooringSamplePrice = $(this).val();
            
            $.ajax({
                data: { "flooringSampleMinAmount": flooringSampleMinAmount, "flooringSamplePrice": flooringSamplePrice},
                url: '@Url.Action("TotalCostCalculatorForTiles","HouseFlooringStore")',
                datatype: "json",
                success: function (data) {
                    $("#Flooring_Sample_Total_Cost").val(data);
                },
            })
        });

        $(function () {

            jQuery.validator.addMethod("noSpace", function (value, element) {
                return value.indexOf(" ") < 0 && value != "";
            }, "No space please and don't leave it empty");

            jQuery.validator.addMethod("hyphenSeperation", function (value, element) {
                return value.indexOf("-") > 0  && value != "";
            }, "Please use only one hypen please and don't leave it empty");

            jQuery.validator.addMethod("exactlength", function (value, element, param) {
                return this.optional(element) || value.length == param;
            }, $.validator.format("Please enter exactly {0} characters."));

            $("#CreateHouseFlooringForm").validate({
                //errorLabelContainer: "#PasswordError",
                wrapper: "div",
                rules: {
                    Flooring_Sample_Name1: {
                        required: true,
                        maxlength: 50
                    },
                    Flooring_Sample_Name2: {
                        required: true,
                        maxlength: 30
                    },
                    Flooring_Sample_Code: {
                        maxlength: 10
                    },
                    Flooring_Sample_Brand: {
                        required: true,
                        maxlength: 20
                    },
                    Flooring_Type_Sample_Size: {
                        required: true,
                        maxlength: 10
                    },
                    Flooring_Type_Sample_Height: {
                        required: true,
                        number: true,
                        maxlength: 5
                    },
                    Flooring_Type_Sample_Width: {
                        required: true,
                        number: true,
                        maxlength: 5
                    },
                    Flooring_Mililiters: {
                        required: true,
                        number: true,
                        maxlength: 10
                    },
                    Flooring_Sample_Price: {
                        required: true,
                        number: true,
                        maxlength: 10
                    },
                    Flooring_Sample_Min_Amount: {
                        required: true,
                        number: true,
                        maxlength: 10
                    },
                    Flooring_Sample_Total_Cost: {
                        required: true,
                        number: true,
                        maxlength: 10
                    }
                },

                messages: {
                    Flooring_Sample_Name1: {
                        required: "Please fill the field",
                        maxlength: "Please don't execeed maximum length 50"
                    },
                    Flooring_Sample_Name2: {
                        required: "Please fill the field",
                        maxlength: "Please don't execeed maximum length 30"
                    },
                    Flooring_Sample_Code: {
                        maxlength: "Please don't execeed maximum length 10"
                    },
                    Flooring_Sample_Brand: {
                        required: "Please fill the field",
                        maxlength: "Please don't execeed maximum length 20"
                    },
                    Flooring_Type_Sample_Size: {
                        required: "Please fill the field",
                        maxlength: "Please don't execeed maximum length 10"
                    },
                    Flooring_Type_Sample_Height: {
                        required: "Please fill the field",
                        number: "Numbers only",
                        maxlength: "Please don't execeed maximum length 5"
                    },
                    Flooring_Type_Sample_Width: {
                        required: "Please fill the field",
                        number: "Numbers only",
                        maxlength: "Please don't execeed maximum length 5"
                    },
                    Flooring_Mililiters: {
                        required: "Please fill the field",
                        number: "Numbers only",
                        maxlength: "Please don't execeed maximum length 10"
                    },
                    Flooring_Sample_Price: {
                        required: "Please fill the field",
                        number: "Numbers only",
                        maxlength: "Please don't execeed maximum length 10"
                    },
                    Flooring_Sample_Min_Amount: {
                        required: "Please fill the field",
                        number: "Numbers only",
                        maxlength: "Please don't execeed maximum length 10"
                    },
                    Flooring_Sample_Total_Cost: {
                        required: "Please fill the field",
                        number: "Numbers only",
                        maxlength: "Please don't execeed maximum length 10"
                    }
                },

                submitHandler: function (form) {
                    getData();
                }
            });

        });

    });

    function getData()
    {

        var CreateHouseFlooringForm = new FormData();
        CreateHouseFlooringForm.append("Flooring_Id", @ViewBag.ViewBagStoredFlooringId);

        if ($('#SelectSample').is(":checked")) {

            CreateHouseFlooringForm.append("Flooring_Sample_Brand", $("#Flooring_Sample_Brand").val());
            CreateHouseFlooringForm.append("Flooring_Sample_Price", $("#Flooring_Sample_Price").val());
            CreateHouseFlooringForm.append("Flooring_Sample_Min_Amount", $("#Flooring_Sample_Min_Amount").val());
            CreateHouseFlooringForm.append("Flooring_Sample_Total_Cost", $("#Flooring_Sample_Total_Cost").val());

            var flooringTypeSampleNC = $("#Flooring_Sample_Name1").val().split("-");

            if ($('#PaintOrTile').is(":checked")) {
                var flooringTypeSampleSize = $("#Flooring_Type_Sample_Size").val().split("x");
                CreateHouseFlooringForm.append("Flooring_Sample_Name", flooringTypeSampleNC[0]);
                CreateHouseFlooringForm.append("Flooring_Sample_Code", flooringTypeSampleNC[1]);
                CreateHouseFlooringForm.append("Flooring_Sample_Height", flooringTypeSampleSize[0]);
                CreateHouseFlooringForm.append("Flooring_Sample_Width", flooringTypeSampleSize[1]);

            }
            else {
                CreateHouseFlooringForm.append("Flooring_Sample_Name", flooringTypeSampleNC[0]);
                CreateHouseFlooringForm.append("Flooring_Sample_Code", flooringTypeSampleNC[1]);
                CreateHouseFlooringForm.append("Flooring_Mililiters", $("#Flooring_Mililiters").val());
            }

        }
        else {

            CreateHouseFlooringForm.append("Flooring_Sample_Name", $("#Flooring_Sample_Name2").val());
            CreateHouseFlooringForm.append("Flooring_Sample_Code", $("#Flooring_Sample_Code").val());
            CreateHouseFlooringForm.append("Flooring_Sample_Brand", $("#Flooring_Sample_Brand").val());
            CreateHouseFlooringForm.append("Flooring_Sample_Price", $("#Flooring_Sample_Price").val());
            CreateHouseFlooringForm.append("Flooring_Sample_Min_Amount", $("#Flooring_Sample_Min_Amount").val());
            CreateHouseFlooringForm.append("Flooring_Sample_Total_Cost", $("#Flooring_Sample_Total_Cost").val());

            if ($('#PaintOrTile').is(":checked")) {

                CreateHouseFlooringForm.append("Flooring_Sample_Height", $("#Flooring_Type_Sample_Height").val());
                CreateHouseFlooringForm.append("Flooring_Sample_Width", $("#Flooring_Type_Sample_Width").val());

            }
            else {
                CreateHouseFlooringForm.append("Flooring_Mililiters", $("#Flooring_Mililiters").val());
